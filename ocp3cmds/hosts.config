[OSEv3:vars]
# admin user created in previous section
ansible_ssh_user=root
ansible_become=True
openshift_deployment_type=openshift-enterprise
os_firewall_use_firewalld=true
oreg_auth_user=gary.crowe@computacenter.com
oreg_auth_password=R0ckH0pper

# Use HTPasswd for authentication
openshift_master_identity_providers=[{'name': 'htpasswd_auth', 'login': 'true', 'challenge': 'true', 'kind': 'HTPasswdPasswordIdentityProvider'}]

# Add developer user developer/redhat123
openshift_master_htpasswd_users={'developer': '$apr1$XCYencWW$wXsuDoUuPr5ju69M/qoWR.'}
# or use pre-defined (ansible) generated file

openshift_master_htpasswd_file=/etc/origin/master/htpasswd

# define default sub-domain for Master node
openshift_master_default_subdomain=apps.ocp3.local

# allow unencrypted connection within cluster
openshift_docker_insecure_registries=172.30.0.0/16

# Install hawkular metrics
# openshift_metrics_install_metrics=true

[masters]
oshiftmaster.ocp3.local openshift_schedulable=true

[etcd]
oshiftmaster.ocp3.local

[nodes]
# defined values for [openshift_node_group_name] in the file below
# [/usr/share/ansible/openshift-ansible/roles/openshift_facts/defaults/main.yml]
oshiftmaster.ocp3.local openshift_node_group_name='node-config-master-infra'
worker1.ocp3.local openshift_node_group_name='node-config-compute'
worker2.ocp3.local openshift_node_group_name='node-config-compute'

# if you'd like to separate Master node feature and Infra node feature, set like follows
# ctrl.srv.world openshift_node_group_name='node-config-master'
# node01.srv.world openshift_node_group_name='node-config-compute'
# node02.srv.world openshift_node_group_name='node-config-infra'

